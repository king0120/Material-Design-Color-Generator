.show
  - if @palette.user_id == current_user.id

    =render "saved_palettes.html.haml"

    = form_for @palette, html: {class: "form-horizontal"} do |m|
      %h2.hidden.updateMessage
      .form-group.hidden{id: "paletteName"}
        = m.label :name, class: "col-sm-2 control-label"
        .col-sm-8
          = m.text_field :name, class: "form-control"
      %br/
      .form-group.hidden
        = m.label :primary_name, class: "col-sm-2 control-label"
        .col-sm-8
          = m.text_field :primary_name, class: "form-control"
      %br/
      .form-group.hidden
        = m.label :secondary_name, class: "col-sm-2 control-label"
        .col-sm-8
          = m.text_field :secondary_name, class: "form-control"
      %br/
      .form-group.hidden
        = m.label :dark_primary, class: "col-sm-2 control-label"
        .col-sm-8
          = m.text_area :dark_primary, class: "form-control"
      %br/
      .form-group.hidden
        = m.label :light_primary, class: "col-sm-2 control-label"
        .col-sm-8
          = m.text_field :light_primary, class: "form-control"
      %br/
      .form-group.hidden
        = m.label :primary, class: "col-sm-2 control-label"
        .col-sm-8
          = m.text_field :primary, class: "form-control"
      %br/
      .form-group.hidden
        = m.label :secondary, class: "col-sm-2 control-label"
        .col-sm-8
          = m.text_field :secondary, class: "form-control"
      %br/
      .form-group.hidden
        = m.label :text_color, class: "col-sm-2 control-label"
        .col-sm-8
          = m.text_field :text_color, class: "form-control"
      %br/
      .form-group.hidden{id: "paletteSubmit"}
        .col-sm-offset-2.col-sm-8#paletteSubmit
          = m.submit "Submit", :class => "btn btn-warning"

    :javascript
      console.log(#{@palette.text_color});
      edit();
      if (#{@palette.text_color} === true){
        $('.fontColors').css('color', 'rgba(255,255,255,1)');
      } else {
        console.log('workin');
        $('.fontColors').css('color', 'rgba(0,0,0,.87)');
      }


  - else
    .jumbotron.denied
      %h1 Access Denied
      %h2 Can't touch this
      = image_tag "https://vaminidotworpressdotcomdotorg.files.wordpress.com/2013/05/hammertime-o.gif"

